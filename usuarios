echo -e "\e[7mElije el usuario?\e[0m"
           select yn in "abono" "otro" "prepago" ; do
             case $yn in
                   abono) adduser abono;break ;;
                   otro) adduser otro ;;
                   prepago) adduser prepago ;;
                   esac
                   done
sleep 3; echo -e "\e[7mCorrecto!\e[0m"


