echo -e "\e[7mElige el usuario\e[0m"
           select yn in "abono" "libre" "prepago" ; do
             case $yn in
                   abono) adduser abono;break ;;
                   libre) adduser libre ;;
                   prepago) adduser prepago ;;
                   esac
                   done
sleep 3; echo -e "\e[7mCorrecto!\e[0m"


